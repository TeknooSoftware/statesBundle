{
    "name": "unialteri/states-bundle",
    "type": "symfony-bundle",
    "description": "Symfony bunde to create PHP classes following the State pattern in PHP. This can be a cleaner way for an object to change its behavior at runtime without resorting to large monolithic conditional statements and thus improve maintainability. (Build on the Uni Alteri States library)",
    "keywords": ["states","class","symfony","bundle","state pattern","pattern","behavioral software design pattern"],
    "homepage": "http://teknoo.it/states",
    "license": ["MIT","GPL-3.0"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "r.deloge@uni-alteri.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "unialteri/states": "~1.2.0-beta4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpunit/phpunit-mock-objects": "~2.3",
        "phpunit/phpunit-selenium": "~1.4",
        "phpunit/phpunit-story": "~1.0",
        "doctrine/orm": "~2.2",
        "doctrine/mongodb-odm": "~1.0.0-BETA13",
        "symfony/framework-bundle": "~2.3",
        "symfony/console": "~2.3",
        "symfony/validator": "~2.3"
    },
    "minimum-stability": "beta",
    "autoload": {
        "psr-4": {
            "UniAlteri\\Bundle\\StatesBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UniAlteri\\Tests\\Bundle\\StatesBundle\\": "tests/"
        }
    },
    "archive": {
        "exclude": ["demo", "vendor", ".idea"]
    }
}
